<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> - Applications</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="/css/repose.css" rel="stylesheet" media="screen">
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".repose-navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/<%= application %>"><%= title %></a>
      <div class="nav-collapse collapse bs-navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/<%= application %>/tests">Running Tests</a></li>
          <li><a href="/<%= application %>/applications">Applications</a></li>
          <li><a href="/<%= application %>/results">Results</a></li>
        </ul>
      </div>
    </div>
    <div class="container">
      <ul class="breadcrumb">
        <li><a href="/<%= application %>/">Home</a></li>
        <li><a href="/<%= application %>/tests">Running Tests</a></li>
        <li><a href="/<%= application %>/tests/<%= sub_app_id %>"><%= sub_app_id %></a></li>
        <li class="active"><%= test_type %></li>
      </ul>
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Average Response Time Overhead</h3>
        </div>
        <div id="art" style="min-width: 310px; height: 400px; margin: 0 auto;"></div>
      </div>
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Throughput Overhead</h3>
        </div>
        <div id="throughput" style="min-width: 310px; height: 400px; margin: 0 auto;"></div>
      </div>
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Errors Overhead</h3>
        </div>
        <div id="errors" style="min-width: 310px; height: 400px; margin: 0 auto;"></div>
      </div>
    </div>
    <hr>
    <footer>
      <p>&copy; Rackspace Hosting 2013</p>
    </footer>
  </div> <!-- /container -->
    <!-- JavaScript plugins (requires jQuery) -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>

    <!-- Enable responsive features in IE8 with Respond.js (https://github.com/scottjehl/Respond) -->
    <script src="/js/respond.js"></script>
    <script src="/js/repose.min.js"></script>
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script type="text/javascript">
      $(document).ready(function() {
        var art_option = {
          chart: {
            renderTo: 'art',
            defaultSeriesType: 'spline',
            animation: Highcharts.svg,
            events :{
              load: function(){
                var series = this.series[0];
                setInterval(function(){
                  $.getJSON('/<%= application %>/tests/<%= sub_app_id %>/<%= test_type %>/metric/avg/live', function(data) {
                    console.log(series);
                    if (!data.ended)
                      for(var i = 0, max = data.results.length;  i < max; i ++)
                        series.addPoint(data.results[i], true, true);
                  });
                }, 5000);
              }
            }
          },
          title: {
            text: 'Repose Average Response Time'
          },
          yAxis:{
            title: {
              text: 'Milliseconds'
            },
            min: 0
          },
          xAxis:{
            title: {
              text: 'Seconds'
            }
          },
          series: [{
            name: 'Average Response Time'
          }]
        };
        var throughput_option = {
          chart: {
            renderTo: 'throughput',
            defaultSeriesType: 'spline',
            animation: Highcharts.svg,
            events :{
              load: function(){
                var series = this.series[0];
                setInterval(function(){
                  $.getJSON('/<%= application %>/tests/<%= sub_app_id %>/<%= test_type %>/metric/throughput/live', function(data) {
                    console.log(series);
                    if (!data.ended)
                      for(var i = 0, max = data.results.length;  i < max; i ++)
                        series.addPoint(data.results[i], true, true);
                  });
                }, 5000);
              }
            }
          },
          title: {
            text: 'Throughput'
          },
          yAxis:{
            title: {
              text: 'Requests/Sec'
            },
            min: 0
          },
          xAxis:{
            title: {
              text: 'Seconds'
            }
          },
          series: [{
            name: 'Average throughput'
          }]
        };
        var error_option = {
          chart: {
            renderTo: 'errors',
            defaultSeriesType: 'spline',
            animation: Highcharts.svg,
            events :{
              load: function(){
                var series = this.series[0];
                setInterval(function(){
                  $.getJSON('/<%= application %>/tests/<%= sub_app_id %>/<%= test_type %>/metric/errors/live', function(data) {
                    console.log(series);
                    if (!data.ended)
                      for(var i = 0, max = data.results.length;  i < max; i ++)
                        series.addPoint(data.results[i], true, true);
                  });
                }, 5000);
              }
            }
          },
          title: {
            text: 'Error Rate'
          },
          yAxis:{
            title: {
              text: '%'
            },
            min: 0
          },
          xAxis:{
            title: {
              text: 'Seconds'
            }
          },
          series: [{
            name: 'Error rate'
          }]
        };

        $.getJSON('/<%= application %>/tests/<%= sub_app_id %>/<%= test_type %>/metric/avg', function(data) {
          if (!data.ended){
            art_option.series[0].data = data.results;
            var art_chart = new Highcharts.Chart(art_option);
          }

        });
        $.getJSON('/<%= application %>/tests/<%= sub_app_id %>/<%= test_type %>/metric/throughput', function(data) {
          if (!data.ended){
            throughput_option.series[0].data = data.results;
            var throughput_chart = new Highcharts.Chart(throughput_option);
          }
        });
        $.getJSON('/<%= application %>/tests/<%= sub_app_id %>/<%= test_type %>/metric/errors', function(data) {
          if (!data.ended){
            error_option.series[0].data = data.results;
            var error_chart = new Highcharts.Chart(error_option);
          }
        });
      });
    </script>
  </body>
</html>
